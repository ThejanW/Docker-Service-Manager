FROM alpine:3.6
MAINTAINER ThejanW
RUN \
    apt-get update && apt-get install -y python-pip python-dev wget nano && apt-get clean && \
    pip install flask requests
# Download server related source files
WORKDIR /usr/share/apache-tika/src/dl/app2/
RUN \
    wget https://raw.githubusercontent.com/ThejanW/Docker-Service-Manager/master/Sample%20Apps/App2/app2.py -O app2.py && \
    chmod +x app2.py
WORKDIR /
# Add symbolic link to app2.py
RUN ln -s /usr/share/apache-tika/src/dl/app2/app2.py /usr/bin/app2
# expose API port, this is the default port
EXPOSE 8764
CMD app2