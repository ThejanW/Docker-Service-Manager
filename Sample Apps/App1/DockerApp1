FROM alpine:3.6
MAINTAINER ThejanW
RUN \
    apt-get update && apt-get install -y python-pip python-dev wget nano && apt-get clean && \
    pip install flask requests
# Download server related source files
WORKDIR /usr/share/apache-tika/src/dl/app1/
RUN \
    wget https://raw.githubusercontent.com/ThejanW/Docker-Service-Manager/master/Sample%20Apps/App1/app1.py -O app1.py && \
    chmod +x app1.py
WORKDIR /
# Add symbolic link to app1.py
RUN ln -s /usr/share/apache-tika/src/dl/app1/app1.py /usr/bin/app1
# expose API port, this is the default port
EXPOSE 8764
CMD app1
