FROM alpine:3.6
MAINTAINER ThejanW
RUN \
    apt-get update && apt-get install -y python-pip python-dev wget nano && apt-get clean && \
    pip install flask requests
# Download server related source files
WORKDIR /usr/share/apache-tika/src/dl/app3/
RUN \
    wget https://raw.githubusercontent.com/ThejanW/Docker-Service-Manager/master/Sample%20Apps/App3/app3.py -O app3.py && \
    chmod +x app3.py
WORKDIR /
# Add symbolic link to app3.py
RUN ln -s /usr/share/apache-tika/src/dl/app3/app3.py /usr/bin/app3
# expose API port, this is the default port
EXPOSE 8764
CMD app3